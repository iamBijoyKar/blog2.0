---
const { icon, title } = Astro.props;
import { Image } from "astro:assets";
---

<div
  class="flex flex-col gap-2 w-[160px] h-[175px] bg-secondary-bg text-primary-text p-4 rounded-lg shadow-md"
>
  <div class="flex items-center justify-center">
    <Image src={icon} alt="icon" class="w-20" />
  </div>
  <div class="flex flex-col items-center justify-center w-full">
    <h1 class="text-lg font-bold text-center">{title}</h1>
  </div>
</div>
